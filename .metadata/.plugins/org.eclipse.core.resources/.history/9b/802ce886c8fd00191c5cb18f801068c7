        //create group action listener
        createGrpBtn.addActionListener(new java.awt.event.ActionListener() {
            public void actionPerformed(java.awt.event.ActionEvent evt) {
            	Group g = new Group(createGrpInput.getText());
            	//add to group list
            	groupList.addGroup(g);
            	createGrpInput.setText(""); //clear the input field text
                //createGrpBtnActionPerformed(evt, g);
                 
            	String[] groupNames = new String[groupList.getGroupList().size()];
            	int index =0 ;
            	for(Group grp: groupList.getGroupList()) {
                 	groupNames[index++] = grp.getName();
                }
            	// update Group list panel
                jList1.setModel(new javax.swing.AbstractListModel<String>() {
                    public int getSize() { return groupNames.length; }
                    public String getElementAt(int i) { return groupNames[i]; }
                });
            }
        });

        jScrollPane1.setViewportView(createGrpInput);

        jLabel1.setText("Enter New Group Name");

