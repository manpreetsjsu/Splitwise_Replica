        //Initial Group list panel where there is no group
        jList1.setModel(new javax.swing.AbstractListModel<String>() {
            String[] strings = { "No Groups Created Yet" };
            public int getSize() { return strings.length; }
            public String getElementAt(int i) { return strings[i]; }
        });
        
        //add action listener to group list
        jList1.addListSelectionListener(new ListSelectionListener() {
			
			@Override
			public void valueChanged(ListSelectionEvent e) {
				// TODO Auto-generated method stub
				//System.out.println(jList1.getSelectedValue());
				for(Group g: groupList.getGroupList()) {
					if(g.getName() == jList1.getSelectedValue()) {
						currentSelectedGroup = g ;
					}
				}
				
			}
		});
       
        jScrollPane2.setViewportView(jList1);

